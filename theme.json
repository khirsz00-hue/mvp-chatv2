{
  "name": "ADHD Buddy Theme",
  "version": "1.0.0",
  "description": "Design system migrated from adhd-buddy-asystent to mvp-chatv2",
  "colors": {
    "primary": "#8B5CF6",
    "secondary": "#EC4899",
    "success": "#10B981",
    "neutral": {
      "50": "#f9fafb",
      "100": "#f3f4f6",
      "200": "#e5e7eb",
      "300": "#d1d5db",
      "400": "#9ca3af",
      "500": "#6b7280",
      "600": "#4b5563",
      "700": "#374151",
      "800": "#1f2937",
      "900": "#111827"
    }
  },
  "typography": {
    "fontFamily": {
      "sans": ["Inter", "system-ui", "sans-serif"],
      "mono": ["Monaco", "Courier New", "monospace"]
    },
    "fontSize": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem"
    }
  },
  "shadows": {
    "soft": "0 2px 8px rgba(0,0,0,0.05)",
